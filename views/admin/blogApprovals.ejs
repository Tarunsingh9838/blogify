<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
    <title>Blog Approvals - Admin</title>
    <style>
        .admin-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 30px 20px;
            min-height: calc(100vh - 70px);
            background: #f8f9fa;
        }

        .header {
            margin-bottom: 30px;
        }

        .header h1 {
            font-size: 32px;
            color: #333;
            margin-bottom: 10px;
            font-weight: 700;
        }

        .admin-nav {
            display: flex;
            gap: 10px;
            margin-bottom: 30px;
            flex-wrap: wrap;
            border-bottom: 2px solid #e0e0e0;
            padding-bottom: 15px;
        }

        .admin-nav a {
            padding: 10px 16px;
            text-decoration: none;
            color: #666;
            font-weight: 600;
            border-radius: 6px;
            transition: all 0.3s ease;
            white-space: nowrap;
        }

        .admin-nav a:hover {
            background: #f0f0f0;
            color: #333;
        }

        .admin-nav a.active {
            background: #667eea;
            color: white;
        }

        .section {
            background: white;
            border-radius: 8px;
            padding: 25px;
            margin-bottom: 30px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .section h2 {
            font-size: 20px;
            color: #333;
            margin-bottom: 20px;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .section h2 i {
            color: #667eea;
            font-size: 24px;
        }

        .blogs-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .blog-card {
            background: #fafafa;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            overflow: hidden;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
        }

        .blog-card:hover {
            border-color: #667eea;
            box-shadow: 0 4px 16px rgba(102, 126, 234, 0.15);
        }

        .blog-card-image {
            width: 100%;
            height: 180px;
            background: #ddd;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #999;
            font-size: 40px;
        }

        .blog-card-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .blog-card-content {
            padding: 20px;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .blog-title {
            font-size: 16px;
            font-weight: 700;
            color: #333;
            margin-bottom: 10px;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }

        .blog-author {
            font-size: 13px;
            color: #666;
            margin-bottom: 10px;
        }

        .blog-date {
            font-size: 12px;
            color: #999;
            margin-bottom: 15px;
        }

        .blog-status {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 4px;
            font-size: 11px;
            font-weight: 600;
            text-transform: uppercase;
            margin-bottom: 15px;
            width: fit-content;
        }

        .blog-status.pending {
            background: #fff3cd;
            color: #856404;
        }

        .blog-status.approved {
            background: #d4edda;
            color: #155724;
        }

        .blog-actions {
            display: flex;
            gap: 10px;
            margin-top: auto;
        }

        .btn-approve,
        .btn-reject,
        .btn-view {
            flex: 1;
            padding: 10px;
            border: none;
            border-radius: 6px;
            font-size: 12px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 5px;
            text-decoration: none;
            text-align: center;
        }

        .btn-approve {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .btn-approve:hover {
            background: #28a745;
            color: white;
            border-color: #28a745;
        }

        .btn-reject {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .btn-reject:hover {
            background: #dc3545;
            color: white;
            border-color: #dc3545;
        }

        .btn-view {
            background: #e7f3ff;
            color: #0066cc;
            border: 1px solid #b3d9ff;
        }

        .btn-view:hover {
            background: #0066cc;
            color: white;
            border-color: #0066cc;
        }

        .empty-state {
            text-align: center;
            padding: 40px 20px;
            color: #999;
        }

        .empty-state i {
            font-size: 48px;
            margin-bottom: 15px;
            opacity: 0.5;
        }

        .empty-state p {
            font-size: 16px;
            margin-bottom: 10px;
        }

        @media (max-width: 768px) {
            .blogs-grid {
                grid-template-columns: 1fr;
            }

            .admin-nav {
                flex-direction: column;
            }

            .admin-nav a {
                width: 100%;
                text-align: center;
            }
        }
    </style>
</head>

<body>
    <%- include('../partials/nav') %>

    <div class="admin-container">
        <div class="header">
            <h1>Blog Approvals</h1>
        </div>

        <div class="admin-nav">
            <a href="/admin">Dashboard</a>
            <a href="/admin/users">Users</a>
            <a href="/admin/blogs">Blogs</a>
            <a href="/admin/blog-approvals" class="active">Blog Approvals</a>
            <a href="/admin/comments">Comments</a>
        </div>

        <!-- Pending Blogs -->
        <div class="section">
            <h2>
                <i class="bi bi-hourglass-split"></i> Pending Approvals
                <span style="margin-left: auto; font-size: 14px; background: #fff3cd; padding: 4px 12px; border-radius: 4px; color: #856404;">
                    <%= pendingBlogs.length %>
                </span>
            </h2>

            <% if (pendingBlogs.length > 0) { %>
                <div class="blogs-grid">
                    <% pendingBlogs.forEach(blog => { %>
                        <div class="blog-card">
                            <div class="blog-card-image">
                                <% if (blog.coverImageURL) { %>
                                    <img src="<%= blog.coverImageURL %>" alt="<%= blog.title %>">
                                <% } else { %>
                                    <i class="bi bi-image"></i>
                                <% } %>
                            </div>
                            <div class="blog-card-content">
                                <div class="blog-title"><%= blog.title %></div>
                                <div class="blog-author">
                                    <i class="bi bi-person"></i> <%= blog.createdBy.fullName %>
                                </div>
                                <div class="blog-date">
                                    <i class="bi bi-calendar"></i> <%= new Date(blog.createdAt).toLocaleDateString() %>
                                </div>
                                <span class="blog-status pending">Pending</span>
                                <div class="blog-actions">
                                    <a href="/blog/<%= blog._id %>" class="btn-view">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <button class="btn-approve" onclick="approveBlog('<%= blog._id %>')">
                                        <i class="bi bi-check-circle"></i> Approve
                                    </button>
                                    <button class="btn-reject" onclick="rejectBlog('<%= blog._id %>')">
                                        <i class="bi bi-x-circle"></i> Reject
                                    </button>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <i class="bi bi-check-circle"></i>
                    <p>No pending blogs</p>
                    <small>All blogs have been approved or rejected</small>
                </div>
            <% } %>
        </div>

        <!-- Approved Blogs -->
        <div class="section">
            <h2>
                <i class="bi bi-check-circle-fill"></i> Recently Approved
                <span style="margin-left: auto; font-size: 14px; background: #d4edda; padding: 4px 12px; border-radius: 4px; color: #155724;">
                    <%= approvedBlogs.length %>
                </span>
            </h2>

            <% if (approvedBlogs.length > 0) { %>
                <div class="blogs-grid">
                    <% approvedBlogs.forEach(blog => { %>
                        <div class="blog-card">
                            <div class="blog-card-image">
                                <% if (blog.coverImageURL) { %>
                                    <img src="<%= blog.coverImageURL %>" alt="<%= blog.title %>">
                                <% } else { %>
                                    <i class="bi bi-image"></i>
                                <% } %>
                            </div>
                            <div class="blog-card-content">
                                <div class="blog-title"><%= blog.title %></div>
                                <div class="blog-author">
                                    <i class="bi bi-person"></i> <%= blog.createdBy.fullName %>
                                </div>
                                <div class="blog-date">
                                    <i class="bi bi-calendar"></i> <%= new Date(blog.createdAt).toLocaleDateString() %>
                                </div>
                                <span class="blog-status approved">Approved</span>
                                <div class="blog-actions">
                                    <a href="/blog/<%= blog._id %>" class="btn-view">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <i class="bi bi-inbox"></i>
                    <p>No approved blogs yet</p>
                    <small>Approve pending blogs to see them here</small>
                </div>
            <% } %>
        </div>
    </div>

    <%- include('../partials/scripts') %>

    <script>
        async function approveBlog(blogId) {
            if (confirm('Are you sure you want to approve this blog?')) {
                try {
                    const response = await fetch(`/admin/blogs/${blogId}/approve`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });

                    if (response.ok) {
                        alert('Blog approved successfully!');
                        location.reload();
                    } else {
                        alert('Error approving blog');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Error approving blog');
                }
            }
        }

        async function rejectBlog(blogId) {
            const reason = prompt('Enter reason for rejection (optional):');
            if (reason !== null) {
                try {
                    const response = await fetch(`/admin/blogs/${blogId}/reject`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ reason })
                    });

                    if (response.ok) {
                        alert('Blog rejected successfully!');
                        location.reload();
                    } else {
                        alert('Error rejecting blog');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Error rejecting blog');
                }
            }
        }
    </script>
</body>

</html>
